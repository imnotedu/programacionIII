{
  "name": "powerfit-backend",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "build": "npm run build:ts && npm run build:css && npm run verify-build",
    "build:ts": "tsc",
    "build:css": "npx tailwindcss -i ./src/index.css -o ./public/css/styles.css --minify",
    "build:css:watch": "npx tailwindcss -i ./src/index.css -o ./public/css/styles.css --watch",
    "verify-build": "node -e \"const fs=require('fs');const p='./public/css/styles.css';if(fs.existsSync(p)){const s=fs.statSync(p).size;console.log('✅ CSS generado:',s,'bytes');if(s<1000){console.error('⚠️ CSS muy pequeño, puede estar vacío');}}else{console.error('❌ CSS NO encontrado');process.exit(1);}\"",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "nodemon",
    "dev:css": "npm run build:css:watch",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "@types/method-override": "^3.0.0",
    "@types/multer": "^2.0.0",
    "autoprefixer": "^10.4.24",
    "axios": "^1.13.5",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.19.0",
    "jsonwebtoken": "^9.0.3",
    "method-override": "^3.0.0",
    "multer": "^2.0.2",
    "pg": "^8.18.0",
    "tailwindcss": "^3.4.19",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "supertest": "^7.2.2",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
