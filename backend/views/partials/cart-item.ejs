<div class="flex gap-4 p-4 bg-card rounded-xl border border-border animate-fade-in cart-item">
  <!-- Image -->
  <div class="w-20 h-20 md:w-24 md:h-24 rounded-lg overflow-hidden bg-muted flex-shrink-0">
    <img
      src="<%= item.product.image %>"
      alt="<%= item.product.name %>"
      class="w-full h-full object-cover"
      loading="lazy"
      onerror="this.src='/placeholder.svg'"
    />
  </div>

  <!-- Content -->
  <div class="flex-1 min-w-0">
    <div class="flex justify-between items-start gap-2">
      <div>
        <h3 class="font-semibold text-foreground line-clamp-1">
          <%= item.product.name %>
        </h3>
        <p class="text-sm text-muted-foreground"><%= item.product.category %></p>
      </div>
      <button
        class="p-2 text-muted-foreground hover:text-destructive transition-colors remove-from-cart-btn"
        data-product-id="<%= item.product.id %>"
        aria-label="Eliminar <%= item.product.name %> del carrito"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      </button>
    </div>

    <div class="flex items-center justify-between mt-3">
      <!-- Quantity Controls -->
      <div class="flex items-center gap-2">
        <button
          class="w-8 h-8 rounded-lg bg-secondary flex items-center justify-center hover:bg-muted transition-colors update-quantity-btn"
          data-product-id="<%= item.product.id %>"
          data-action="decrease"
          aria-label="Disminuir cantidad"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
          </svg>
        </button>
        <span class="w-8 text-center font-medium quantity-display"><%= item.quantity %></span>
        <button
          class="w-8 h-8 rounded-lg bg-secondary flex items-center justify-center hover:bg-muted transition-colors update-quantity-btn"
          data-product-id="<%= item.product.id %>"
          data-action="increase"
          aria-label="Aumentar cantidad"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
        </button>
      </div>

      <!-- Price -->
      <p class="font-bold text-foreground subtotal-display">
        $<%= (item.product.price * item.quantity).toFixed(2) %>
      </p>
    </div>
  </div>
</div>
