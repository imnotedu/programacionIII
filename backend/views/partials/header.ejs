<header class="sticky top-0 z-50 bg-background/95 backdrop-blur-md border-b border-border" role="banner">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group" aria-label="PowerFit - Ir a inicio">
        <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center transition-transform group-hover:scale-105" aria-hidden="true">
          <svg class="w-6 h-6 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
        <span class="text-xl font-bold text-foreground hidden sm:block">
          Power<span class="text-primary">Fit</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8" role="navigation" aria-label="Navegación principal">
        <a href="/" class="nav-link <%= currentPath === '/' ? 'text-primary font-semibold' : '' %>" aria-current="<%= currentPath === '/' ? 'page' : 'false' %>">
          Inicio
        </a>
        <a href="/tienda" class="nav-link <%= currentPath === '/tienda' ? 'text-primary font-semibold' : '' %>" aria-current="<%= currentPath === '/tienda' ? 'page' : 'false' %>">
          Tienda
        </a>
        <a href="/#destacados" class="nav-link">
          Descuentos
        </a>
      </nav>

      <!-- Desktop Actions -->
      <div class="hidden md:flex items-center gap-4">
        <% if (isAuthenticated) { %>
          <% if (user.isAdmin) { %>
            <a href="/admin-products" class="text-sm font-medium hover:text-primary transition-colors border border-input px-3 py-1.5 rounded-md" aria-label="Panel de administración">
              Admin
            </a>
          <% } %>
          <span class="text-sm text-muted-foreground" aria-label="Usuario actual">
            Hola, <span class="font-medium text-foreground"><%= user.name %></span>
          </span>
          <form action="/api/auth/logout" method="POST" class="inline">
            <button type="submit" class="text-sm text-muted-foreground hover:text-primary transition-colors" aria-label="Cerrar sesión">
              Cerrar sesión
            </button>
          </form>
        <% } else { %>
          <a href="/login" class="flex items-center gap-2 nav-link" aria-label="Iniciar sesión">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>Ingresar</span>
          </a>
        <% } %>

        <a href="/carrito" class="relative flex items-center gap-2 btn-primary py-2 px-4" aria-label="Ver carrito de compras<%= cartCount > 0 ? ', ' + cartCount + ' items' : '' %>">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <% if (cartCount > 0) { %>
            <span class="absolute -top-2 -right-2 w-5 h-5 bg-destructive text-destructive-foreground text-xs font-bold rounded-full flex items-center justify-center animate-scale-in" aria-label="<%= cartCount %> items en el carrito">
              <%= cartCount %>
            </span>
          <% } %>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="flex md:hidden items-center gap-3">
        <a href="/carrito" class="relative p-2" aria-label="Ver carrito de compras<%= cartCount > 0 ? ', ' + cartCount + ' items' : '' %>">
          <svg class="w-6 h-6 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <% if (cartCount > 0) { %>
            <span class="absolute -top-1 -right-1 w-5 h-5 bg-primary text-primary-foreground text-xs font-bold rounded-full flex items-center justify-center" aria-label="<%= cartCount %> items">
              <%= cartCount %>
            </span>
          <% } %>
        </a>
        <button id="mobile-menu-btn" class="p-2 text-foreground" aria-label="Abrir menú de navegación" aria-expanded="false" aria-controls="mobile-menu">
          <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="hidden md:hidden py-4 border-t border-border animate-fade-in" role="navigation" aria-label="Navegación móvil">
      <div class="flex flex-col gap-4">
        <a href="/" class="text-lg font-medium <%= currentPath === '/' ? 'text-primary' : 'text-foreground' %>" aria-current="<%= currentPath === '/' ? 'page' : 'false' %>">
          Inicio
        </a>
        <a href="/tienda" class="text-lg font-medium <%= currentPath === '/tienda' ? 'text-primary' : 'text-foreground' %>" aria-current="<%= currentPath === '/tienda' ? 'page' : 'false' %>">
          Tienda
        </a>
        <a href="/#destacados" class="text-lg font-medium text-foreground">
          Descuentos
        </a>
        <% if (isAuthenticated) { %>
          <form action="/api/auth/logout" method="POST">
            <button type="submit" class="text-lg font-medium text-left text-muted-foreground" aria-label="Cerrar sesión">
              Cerrar sesión
            </button>
          </form>
        <% } else { %>
          <a href="/login" class="text-lg font-medium text-foreground">
            Ingresar
          </a>
        <% } %>
      </div>
    </nav>
  </div>
</header>
