<div class="min-h-screen flex flex-col">
  <main class="flex-1 py-8 md:py-12">
    <div class="container mx-auto px-4">
      <a
        href="/carrito"
        class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground mb-6 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Volver al carrito
      </a>

      <h1 class="section-title mb-8">Finalizar compra</h1>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Form -->
        <form action="/api/checkout/process" method="POST" class="space-y-8" data-validate>
          <!-- Shipping Info -->
          <div class="bg-card border border-border rounded-xl p-6">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h2 class="text-lg font-semibold text-foreground">
                Información de envío
              </h2>
            </div>

            <div class="grid gap-4">
              <div class="grid sm:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-sm font-medium text-foreground mb-2">
                    Nombre completo
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    class="input-field"
                    placeholder="Tu nombre"
                    required
                  />
                  <p class="error-message text-xs text-destructive mt-1 hidden"></p>
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-foreground mb-2">
                    Correo electrónico
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="input-field"
                    placeholder="tu@email.com"
                    required
                  />
                  <p class="error-message text-xs text-destructive mt-1 hidden"></p>
                </div>
              </div>
              <div>
                <label for="address" class="block text-sm font-medium text-foreground mb-2">
                  Dirección
                </label>
                <input
                  type="text"
                  id="address"
                  name="address"
                  class="input-field"
                  placeholder="Calle y número"
                  required
                />
                <p class="error-message text-xs text-destructive mt-1 hidden"></p>
              </div>
              <div class="grid sm:grid-cols-2 gap-4">
                <div>
                  <label for="city" class="block text-sm font-medium text-foreground mb-2">
                    Ciudad
                  </label>
                  <input
                    type="text"
                    id="city"
                    name="city"
                    class="input-field"
                    placeholder="Tu ciudad"
                    required
                  />
                  <p class="error-message text-xs text-destructive mt-1 hidden"></p>
                </div>
                <div>
                  <label for="zipCode" class="block text-sm font-medium text-foreground mb-2">
                    Código postal
                  </label>
                  <input
                    type="text"
                    id="zipCode"
                    name="zipCode"
                    class="input-field"
                    placeholder="12345"
                    required
                  />
                  <p class="error-message text-xs text-destructive mt-1 hidden"></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Payment Info -->
          <div class="bg-card border border-border rounded-xl p-6">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
              </div>
              <h2 class="text-lg font-semibold text-foreground">
                Información de pago
              </h2>
            </div>

            <div class="grid gap-4">
              <div>
                <label for="cardNumber" class="block text-sm font-medium text-foreground mb-2">
                  Número de tarjeta
                </label>
                <input
                  type="text"
                  id="cardNumber"
                  name="cardNumber"
                  class="input-field"
                  placeholder="1234 5678 9012 3456"
                  required
                />
                <p class="error-message text-xs text-destructive mt-1 hidden"></p>
              </div>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label for="cardExpiry" class="block text-sm font-medium text-foreground mb-2">
                    Expiración
                  </label>
                  <input
                    type="text"
                    id="cardExpiry"
                    name="cardExpiry"
                    class="input-field"
                    placeholder="MM/AA"
                    required
                  />
                  <p class="error-message text-xs text-destructive mt-1 hidden"></p>
                </div>
                <div>
                  <label for="cardCvc" class="block text-sm font-medium text-foreground mb-2">
                    CVC
                  </label>
                  <input
                    type="text"
                    id="cardCvc"
                    name="cardCvc"
                    class="input-field"
                    placeholder="123"
                    required
                  />
                  <p class="error-message text-xs text-destructive mt-1 hidden"></p>
                </div>
              </div>
            </div>

            <p class="text-xs text-muted-foreground mt-4">
              * Este es un pago simulado. No se procesará ningún cargo real.
            </p>
          </div>

          <button
            type="submit"
            class="btn-primary w-full"
          >
            Pagar $<%= total.toFixed(2) %>
          </button>
        </form>

        <!-- Order Summary -->
        <div>
          <div class="bg-card border border-border rounded-xl p-6 sticky top-24">
            <h2 class="text-lg font-semibold text-foreground mb-4">
              Resumen del pedido
            </h2>

            <div class="space-y-4 mb-6">
              <% items.forEach(function(item) { %>
                <div class="flex gap-3">
                  <div class="w-16 h-16 rounded-lg overflow-hidden bg-muted flex-shrink-0">
                    <img
                      src="<%= item.product.image %>"
                      alt="<%= item.product.name %>"
                      class="w-full h-full object-cover"
                      loading="lazy"
                    />
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="font-medium text-foreground text-sm line-clamp-1">
                      <%= item.product.name %>
                    </p>
                    <p class="text-sm text-muted-foreground">
                      Cantidad: <%= item.quantity %>
                    </p>
                    <p class="text-sm font-medium text-foreground">
                      $<%= (item.product.price * item.quantity).toFixed(2) %>
                    </p>
                  </div>
                </div>
              <% }); %>
            </div>

            <div class="space-y-3 border-t border-border pt-4">
              <div class="flex justify-between text-sm">
                <span class="text-muted-foreground">Subtotal</span>
                <span class="text-foreground">$<%= total.toFixed(2) %></span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-muted-foreground">Envío</span>
                <span class="text-foreground">
                  <%= total >= 50 ? 'Gratis' : '$5.99' %>
                </span>
              </div>
              <div class="border-t border-border pt-3">
                <div class="flex justify-between">
                  <span class="font-semibold text-foreground">Total</span>
                  <span class="font-bold text-xl text-foreground">
                    $<%= (total + (total >= 50 ? 0 : 5.99)).toFixed(2) %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<script src="/js/forms.js"></script>
