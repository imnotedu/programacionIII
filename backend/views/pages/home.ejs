<!-- Hero Section -->
<section class="relative bg-charcoal overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-primary/30 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 py-16 md:py-24 lg:py-32 relative">
      <div class="max-w-2xl">
        <span class="inline-block text-primary font-semibold text-sm uppercase tracking-wider mb-4 animate-fade-in">
          Suplementos deportivos premium
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight animate-fade-in">
          Potencia tu
          <span class="text-primary"> rendimiento</span> al máximo
        </h1>
        <p class="text-white/70 text-lg md:text-xl mt-6 leading-relaxed animate-fade-in">
          Descubre nuestra selección de suplementos de alta calidad para alcanzar tus metas fitness.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 mt-8 animate-fade-in">
          <a href="/tienda" class="btn-hero inline-flex items-center justify-center gap-2">
            Ver productos
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
          <a href="/register" class="btn-secondary inline-flex items-center justify-center">
            Crear cuenta
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-12 border-b border-border">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="flex flex-col items-center text-center p-4">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-3">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-foreground">Envío Gratis</h3>
          <p class="text-sm text-muted-foreground mt-1">
            En pedidos mayores a $50
          </p>
        </div>

        <div class="flex flex-col items-center text-center p-4">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-3">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-foreground">Productos Originales</h3>
          <p class="text-sm text-muted-foreground mt-1">
            100% garantizados
          </p>
        </div>

        <div class="flex flex-col items-center text-center p-4">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-3">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-foreground">Soporte 24/7</h3>
          <p class="text-sm text-muted-foreground mt-1">
            Atención personalizada
          </p>
        </div>

        <div class="flex flex-col items-center text-center p-4">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-3">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-foreground">Compra Segura</h3>
          <p class="text-sm text-muted-foreground mt-1">
            Pago protegido
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Destacados Section (Sale Products) -->
  <section id="destacados" class="py-16 md:py-20 scroll-mt-20">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="section-title justify-center text-center">Productos en Descuento</h2>
          <p class="text-muted-foreground mt-2">
            Las mejores ofertas y promociones
          </p>
        </div>
        <a href="/tienda" class="hidden md:flex items-center gap-2 text-primary font-semibold hover:gap-3 transition-all">
          Ver todos
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>

      <% if (saleProducts && saleProducts.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <% saleProducts.forEach(function(product) { %>
            <%- include('../partials/product-card', { product: product, favorites: favorites || [] }) %>
          <% }); %>
        </div>
      <% } else { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <% featuredProducts.forEach(function(product) { %>
            <%- include('../partials/product-card', { product: product, favorites: favorites || [] }) %>
          <% }); %>
        </div>
      <% } %>

      <div class="mt-8 text-center md:hidden">
        <a href="/tienda" class="btn-primary inline-flex items-center gap-2">
          Ver todos los productos
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Products Section -->
  <section class="py-16 md:py-20">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="section-title">Productos Populares</h2>
          <p class="text-muted-foreground mt-2">
            Los favoritos de nuestros clientes
          </p>
        </div>
        <a href="/tienda" class="hidden md:flex items-center gap-2 text-primary font-semibold hover:gap-3 transition-all">
          Ver todos
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% featuredProducts.forEach(function(product) { %>
          <%- include('../partials/product-card', { product: product, favorites: favorites || [] }) %>
        <% }); %>
      </div>

      <div class="mt-8 text-center md:hidden">
        <a href="/tienda" class="btn-primary inline-flex items-center gap-2">
          Ver todos los productos
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-20 bg-muted">
    <div class="container mx-auto px-4 text-center">
      <h2 class="section-title mb-4">
        ¿Listo para empezar?
      </h2>
      <p class="text-muted-foreground max-w-xl mx-auto mb-8">
        Únete a miles de atletas que confían en PowerFit para alcanzar sus objetivos.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/tienda" class="btn-primary inline-flex items-center justify-center gap-2">
          Explorar tienda
        </a>
        <a href="/register" class="btn-secondary inline-flex items-center justify-center">
          Crear cuenta gratis
        </a>
      </div>
    </div>
  </section>
